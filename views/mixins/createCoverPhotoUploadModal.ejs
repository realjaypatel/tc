<!-- mixins/createCoverPhotoUploadModal.ejs -->
<div id="coverPhotoUploadModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="coverPhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="coverPhotoModalLabel" class="modal-title">Upload a new cover photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="coverPhoto" type="file" name="filePhoto">

                <div class="imagePreviewContainer">
                    <img id="coverPreview">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="coverPhotoButton" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
